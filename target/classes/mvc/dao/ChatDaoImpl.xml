<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="mvc.dao.ChatDao">
  
	  <insert id="insertChat" parameterType="mvc.dto.ChatDto">
	  		insert into chat(chat_no,chat_content,chatroom_id,UESR_ID)
	  		values(chat_seq.nextval,#{chat_content},#{chatroom_id},#{UESR_ID})
	  </insert>
	  <select id="selectChat" resultType="mvc.dto.ChatDto" parameterType="String">
	  	select * from chat where chatRoom_id = #{chatRoom} order by chat_no asc
	  </select>
  
  </mapper>